<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_item"
    android:layout_width="match_parent"
    android:layout_height="62dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/task_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6-1不打航母"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/task_item_fleet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一舰队"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/task_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50/100"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/task_item_fleet"
            android:layout_marginLeft="20dp"/>


        <ImageView
            android:id="@+id/task_item_drug"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/drug"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/task_item_setting"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/del"
            android:layout_toLeftOf="@+id/task_item_drug"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
